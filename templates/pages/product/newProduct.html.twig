{% extends "base.html.twig" %}

{% block body %}

    {% include "partials/_header.html.twig" %}

    <div class="container">



        <h1 class="mt-5">Cr√©ation d'un nouveau produit</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success mt-2">
                {{ message }}
            </div>
        {% endfor %}

        {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.productName) }}
            {{ form_widget(form.productName) }}
            <div class="form-error">
                {{ form_errors(form.productName) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.productDesc) }}
            {{ form_widget(form.productDesc) }}
            <div class="form-error">
                {{ form_errors(form.productDesc) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.productPrice) }}
            {{ form_widget(form.productPrice) }}
            <div class="form-error">
                {{ form_errors(form.productPrice) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_row(form.submit) }}
        </div>
        {{ form_end(form) }}

    </div>

{% endblock %}


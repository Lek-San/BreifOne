{% extends 'base.html.twig' %}

{% block title %}
	| Produits
{% endblock %}

{% block body %}

	{% include "partials/_header.html.twig" %}

    {% if not products.items is same as ([]) %}

	<div class="container mt-4">
		<h1 class="text-center">Tous les Produit</h1>

		<div class="count">
			<h5>
				Il y a au total
				{{ products.getTotalItemCount }}
				de produits.
			</h5>
		</div>

		<div class="d-flex justify-content-evenly">
			{% for product in products %}
				<div class="card mt-4" style="width: 18rem;">
					<div class="card-body">
						<h5 class="card-title">{{ product.productName }}</h5>
						<p class="card-text">{{ product.productDesc }}</p>
						<h6 class="card-subtitle mb-2 text-body-secondary">{{ product.productPrice }}â‚¬</h6>
						<a href="#" class="card-link">Voir la description</a>
						{# <a href="#" class="card-link">Another link</a> #}
					</div>
				</div>
			{% endfor %}
		</div>

		<div class="navigation d-flex justify-content-center mt-4">
			{{ knp_pagination_render(products) }}
		</div>

        {% else %}
            <h4>Il n'y a plus de produits.</h4>
        {% endif %}

	</div>

{% endblock %}
